{
 "name": "Page Cage",
 "short_name": "Cage",
 "description": "Loads a page inside a frame so it can't be seen by other extensions",
 "version": "0.1.1",
 "manifest_version": 2,
 "icons": {
	"16": "cage-16.png",
	"48": "cage-48.png",
	"128": "cage-128.png"
 },
 "content_security_policy": "default-src 'self'; frame-src 'self' https://* http://*",
 "permissions": [ "webRequest", "webRequestBlocking", "<all_urls>",
 	"contextMenus", "activeTab", "history"],
  "background": {
    "scripts": ["background.js"]
  },
 "browser_action": {
   "default_icon": {
	   "16": "cage-16.png",
       "48": "cage-48.png",
	   "128": "cage-128.png"
   },
   "default_title": "Cage"
 }
}